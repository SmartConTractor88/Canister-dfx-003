type Listing = record {
    title: text;
    description: text;
    starting_price: nat64;
    sold: bool;
    owner: principal;
};

type CreateListing = record {
    title: text;
    description: text;
    starting_price: nat64;
};

service : {
    get_listing: (nat64) -> (opt Listing) query;
    get_listing_count: () -> (nat64) query;
    create_listing: (CreateListing) -> (Listing);
}